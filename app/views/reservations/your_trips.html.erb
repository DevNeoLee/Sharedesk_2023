<div class="col-md-12 min_height_mid" >

    <div class="h1 m-4 pt-5 pb-3"> Your Cart</div>
    <hr>
   <div data-controller="infinite-scroll" data-action="scroll@window->infinite-scroll#scroll">
        <div data-target="infinite-scroll.entries">
            <div class="row mt-5">
                <% @trips_result.each do |trip| %>
                    <div class="col-md-3 mb-2">
                        <%= link_to room_path(trip.room) do %>
                        <div class="card mb-2">
                            <div class="card-header h4">
                                    <%= trip.start_date.strftime('%v')%>                
                            </div>
                            <% if trip.room.images.attached? %>
                                <%= image_tag trip.room.medium_image(trip.room.images[0]), class: "img-fluid" , style: "height: 200px" %>
                            <% end %>
                            <div class="card-body">
                                <div class="card-title">                            
                                    <%= trip.room.listing_name %>
                                </div>
                                <div class="card-title">                            
                                    <%= trip.room.address %>
                                </div>
                                <div class="card-title">                            
                                    Host: <%= image_tag trip.room.user.default_avatar, class: "img-circle avatar-small"%>
                                </div>
                                <div class="card-title ml-4">                            
                                    <%= trip.room.user.name%>
                                </div>
                                <div class="card-title ml-4">                            
                                    <%= trip.room.user.email%>
                                </div>
                                <h4>total payment: $<%= trip.total %></h4>
                            </div>
                        </div>
                        <% end%>
                    </div>
                <% end %>
            </div>
        </div>
        <div data-target="infinite-scroll.pagination" id="pagination">
            <%== pagy_bootstrap_nav(@pagy).html_safe %>
        </div>
    </div>
</div>

    

               
   